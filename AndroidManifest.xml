<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.CountriesAndPeople.ergo"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="18"/>
    <application android:label="@string/app_name"
                 android:icon="@drawable/icon_countries2">

        <activity android:name="MyActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="Info"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.INFO"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name="ChangeColor"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.CHANGECOLOR"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name="People"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.PEOPLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>
</manifest>
